# 🔒 Kairos Security Configuration
# 이 파일을 .env로 복사하고 실제 값으로 변경하세요

# 서버 설정
PORT=3000
NODE_ENV=development

# 보안 키 (실제 사용 시 반드시 변경하세요)
SECRET_KEY=your-super-secret-key-change-this-immediately
KAIROS_ENCRYPTION_KEY=your-32-byte-encryption-key-here
KAIROS_MASTER_KEY=your-32-byte-master-key-here

# Ollama 서버 설정
OLLAMA_URL=http://localhost:11434

# CORS 설정 (프로덕션 환경에서 제한하세요)
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# 보안 설정
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900000
SESSION_TIMEOUT=86400000
PASSWORD_MIN_LENGTH=8
REQUIRE_SPECIAL_CHARS=true

# 암호화 설정
ENCRYPTION_ENABLED=true
AUDIT_LOGGING=true

# 요청 제한 설정
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# 로그 설정
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# 백업 설정
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=./backups

# 개발 모드 설정 (프로덕션에서는 false로 설정)
DEBUG_MODE=false
SHOW_ERROR_DETAILS=false
